// Programa Calculadora Equipo 4
//INSTITUTO POLITECNICO NACIONAL


#include <math.h>
#include <stdio.h>
#include<stdlib.h>

int main()
{
    int opcion;
    float a,b,res;

    do
    {
        printf( "\n   1. Calcular suma.");
        printf( "\n   2. Calcular resta.");
        printf( "\n   3. Calcular multiplicacion.");
        printf( "\n   4. Calcular division.");
        printf( "\n   5. Salir.");
        printf( "\n\n   Introduzca opcion (1-5): ");

        scanf( "%d", &opcion );

        /* Inicio del anidamiento */

        switch ( opcion )
        {
            case 1:
	         //   float a, b, sum;
	            system("cls");
	            printf("Suma de 2 numeros");
	            printf("\n\nIngresa el primer valor: ");
	            scanf("%f", &a);
	            printf("Ingresa el segundo valor: ");
	            scanf("%f", &b);
	
	            res = a + b;
	
	            printf("\n\nEl resultado es: %.2f\n\n", res);
                    break;

             case 2:
            // 	float a, b, res;
	            system("cls");
	            printf("Resta de 2 numeros");
	            printf("\n\nIngresa el primer valor: ");
	            scanf("%f", &a);
	            printf("Ingresa el segundo valor: ");
	            scanf("%f", &b);
	
	            res = a - b;
	
	            printf("\n\nEl resultado es: %.2f\n\n", res);
                    break;

             case 3:
	        //   float a,b,res;
               system("cls");
               printf("Multiplicacion de 2 numeros");
		       printf("\n\nIngrese el primer numero: ");
		       scanf("%f",&a);
		       printf("Ingrese el segundo numero: ");
		       scanf("%f",&b);
		
		       res = a * b;
		
		      printf("\n\nEl resultado de la Multiplicacion es: %.2f\n\n",res);
                    break;
             
             case 4:
            //   float resultado,a,b;
               system("cls");
               printf("Division de 2 numeros");
               printf("\n\nIngrese el numero 1: ");
               scanf("%f", &a);
               printf("Ingrese el numero 2: ");
               scanf("%f", &b);

                if(b == 0){
                  printf("\n\nEl dividendo no puede ser cero\n\n");
                  break;
                }else{
                  res = a / b;
                }

                printf("\n\nEl resultado es: %.2f\n\n",res);  
                    break;
             case 5: 
                    break;
             default: 
                system("cls");
                printf("\n\nOpcion invalida!!!\n\n");
         }
         /* Fin del anidamiento */
    } while ( opcion !=5);

    return 0;
}
