#include <math.h>
#include <stdio.h>

int main()
{
    int n, opcion;

    do
    {
        printf( "\n   1. Calcular suma.");
        printf( "\n   2. Calcular resta.");
        printf( "\n   3. Calcular multiplicación.");
        printf( "\n   4. Calcular división.");
        printf( "\n   5. Salir.");
        printf( "\n\n   Introduzca opcion (1-5): ");

        scanf( "%d", &opcion );

        /* Inicio del anidamiento */

        switch ( opcion )
        {
            case 1:
                    break;

             case 2:
             	int a, b, res;
	
	            printf("Resta de 2 numeros");
	            printf("\n\nIngresa el primer valor: ");
	            scanf("%d", &a);
	            printf("Ingresa el segundo valor: ");
	            scanf("%d", &b);
	
	            res = a - b;
	
	            printf("\n\nEl resultado es: %d", res);
                    break;

             case 3:
                    break;
             
             case 4:
                 int a, b;
                 float resultado;
    
                    printf("Ingrese el numero 1: ");
                    scanf("%i", &a);
    
                    printf("Ingrese el numero 2: ");
                    scanf("%i", &b);

                    if(b == 0){
                        printf("el dividendo no puede ser cero");
                    }else{
                        resultado = a / b;
                    }


    

                    printf("El resultado es: %f", resultado);  
                    break;
         }

         /* Fin del anidamiento */

    } while ( opcion != 5);

    return 0;
}
